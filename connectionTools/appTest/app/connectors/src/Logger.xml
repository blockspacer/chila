<connector name="chila.connectionTools.appTest.app.connectors.gen.Logger"
        description="Handles data logging">

    <!-- Arguments -->
    <arguments>
        <arg name="clientId"                    description="Client's id"                       />
        <arg name="recvBuffer"                  description="Receive buffer"                    />
        <arg name="sndBuffer"                   description="Send buffer"                       />
        <arg name="errorMsg"                    description="Error message"                     />
        <arg name="moduleName"                  description="Module name"                       />
    </arguments>

    <!-- Actions -->
    <actions>
        <action name="moduleStarted"            arguments="moduleName"
                                                description="Logs that a Module has started"    />

        <action name="clientConnected"          arguments="clientId"
                                                description="Logs a client connected event"     />

        <action name="clientDisconnected"       arguments="clientId"
                                                description="Logs a client disconnected event"  />

        <action name="msgReceived"              arguments="clientId, recvBuffer"
                                                description="Logs a message received event"     />

        <action name="msgProcessed"             arguments="clientId, sndBuffer"
                                                description="Logs a message sent event"         />
    </actions>

</connector>
