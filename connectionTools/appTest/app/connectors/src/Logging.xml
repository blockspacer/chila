<connector name="chila.connectionTools.appTest.app.connectors.gen.Logging"
        description="Handles data logging">

    <!-- Arguments -->
    <arguments>
        <arg name="clientId"/>
        <arg name="recvBuffer"/>
        <arg name="sndBuffer"/>
        <arg name="errorMsg"/>
        <arg name="connectorName"/>
    </arguments>

    <!-- Actions -->
    <actions>
        <!--action name="connectorStart"               returns="void"
                                                    arguments="connectorName"
                                                    description="Logs connector start event"/-->

        <!--action name="connectorFinalizing"          returns="void"
                                                    arguments="connectorName"
                                                    description="Logs connector finalizing event"/-->

        <!--action name="addressAlreadyInUse"          returns="void"
                                                    arguments=""
                                                    description="Logs address already in use event"/-->

        <!--action name="serverCreationFailed"         returns="void"
                                                    arguments="errorMsg"
                                                    description="Logs server creation failed event"/-->

        <action name="clientConnected"              returns="void"
                                                    arguments="clientId"
                                                    description="Logs a client connected event"/>

        <action name="clientDisconnected"           returns="void"
                                                    arguments="clientId"
                                                    description="Logs a client disconnected event"/>

        <!--action name="connectionError"              returns="void"
                                                    arguments="clientId, errorMsg"
                                                    description="Logs connection error event"/-->

        <!--action name="msgRcvdError"                 returns="void"
                                                    arguments="clientId, errorMsg"
                                                    description="Logs message received error"/-->

        <!--action name="msgSentError"                 returns="void"
                                                    arguments="clientId, errorMsg"
                                                    description="Logs message sent error event"/-->

        <action name="msgReceived"                  returns="void"
                                                    arguments="clientId, recvBuffer"
                                                    description="Logs message received event"/>

        <action name="msgProcessed"                 returns="void"
                                                    arguments="clientId, sndBuffer"
                                                    description="Logs message sent event"/>

    </actions>

</connector>
