<connector name="chila.connectionTools.appTest2.impl.msgProcessor.connectors.gen.MessageProcessor" description="Handles processes messages">

    <!-- Arguments -->
    <arguments>
        <arg name="procMessage" description="Message to be processed"/>
        <arg name="result" description="MessageProcessor result"/>
        <arg name="moduleName" description="Module name"/>
    </arguments>

    <!-- Events -->
    <events>
        <event name="starting" arguments=""/>
        <event name="started" arguments=""/>
        <event name="deactivating" arguments=""/>
        <event name="deactivated" arguments=""/>
        <event name="finishing" arguments=""/>
        <event name="finished" arguments=""/>

        <event name="messageProcessed" arguments="result, procMessage" description="Message processed event"/>
    </events>

    <!-- Actions -->
    <actions>
        <action name="start" arguments="" description="Starts the module" events="started"/>
        <action name="deactivate" arguments="" description="Deactivates the module" events="deactivated"/>
        <action name="finish" arguments="" description="Finishes the module" events="finished"/>

        <action name="processMessage" arguments="procMessage" description="Processes a message" events="messageProcessed"/>
    </actions>



</connector>
